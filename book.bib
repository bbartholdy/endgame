@article{curtisRoleMicrobiota2020,
  title = {The Role of the Microbiota in Periodontal Disease},
  author = {Curtis, Mike A. and Diaz, Patricia I. and Dyke, Thomas E. Van},
  year = {2020},
  journal = {Periodontology 2000},
  volume = {83},
